# AI Service Platform - Environment Configuration
# Copy this file to .env and fill in your values

# Application
AI_PLATFORM_ENV=development
AI_PLATFORM_DEBUG=true

# Database (PostgreSQL)
AI_PLATFORM_DATABASE__HOST=localhost
AI_PLATFORM_DATABASE__PORT=5432
AI_PLATFORM_DATABASE__NAME=ai_platform
AI_PLATFORM_DATABASE__USER=postgres
AI_PLATFORM_DATABASE__PASSWORD=postgres
AI_PLATFORM_DATABASE__POOL_SIZE=10
AI_PLATFORM_DATABASE__MAX_OVERFLOW=20

# Redis
AI_PLATFORM_REDIS__HOST=localhost
AI_PLATFORM_REDIS__PORT=6379
AI_PLATFORM_REDIS__DB=0
AI_PLATFORM_REDIS__PASSWORD=

# JWT Authentication
AI_PLATFORM_JWT__SECRET_KEY=your-super-secret-key-change-in-production
AI_PLATFORM_JWT__ALGORITHM=HS256
AI_PLATFORM_JWT__ACCESS_TOKEN_EXPIRE_MINUTES=30
AI_PLATFORM_JWT__REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting
AI_PLATFORM_RATE_LIMIT__REQUESTS_PER_MINUTE=100
AI_PLATFORM_RATE_LIMIT__TOKENS_PER_MINUTE=10000
AI_PLATFORM_RATE_LIMIT__BURST_LIMIT=20

# AI Providers

# HuggingFace
HF_API_KEY=your-huggingface-api-key

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# Anthropic
ANTHROPIC_API_KEY=your-anthropic-api-key

# Pinecone (Vector Database)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENV=your-pinecone-environment

# Qdrant (Vector Database)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# Storage
AI_PLATFORM_STORAGE__TYPE=local
AI_PLATFORM_STORAGE__BASE_PATH=./data/uploads
AI_PLATFORM_STORAGE__MAX_FILE_SIZE_MB=100
AI_PLATFORM_STORAGE__S3_BUCKET=
AI_PLATFORM_STORAGE__S3_REGION=

# Billing
AI_PLATFORM_BILLING__ENABLED=false
AI_PLATFORM_BILLING__STRIPE_API_KEY=
AI_PLATFORM_BILLING__DEFAULT_PLAN=free

# Observability
AI_PLATFORM_OBSERVABILITY__LOG_LEVEL=INFO
AI_PLATFORM_OBSERVABILITY__ENABLE_TRACING=false
AI_PLATFORM_OBSERVABILITY__ENABLE_METRICS=false
AI_PLATFORM_OBSERVABILITY__SERVICE_NAME=ai-service-platform
